<?xml version="1.0" encoding="UTF-8"?>
<syntax name="sieve">
    <meta>
        <name>Sieve</name>
        <type>structured</type>
        <preferred-file-extension>sieve</preferred-file-extension>
    </meta>

    <detectors>
        <extension priority="1.0">sieve</extension>
    </detectors>

    <indentation>
        <increase>
            <expression>(\{[^}\"']*$)|(\[[^\]\"']*$)|(\([^)\"']*$)</expression>
        </increase>
        <decrease>
            <expression>^\s*(\s*/\*.*\*/\s*)*[\}\]\)\\]</expression>
        </decrease>
    </indentation>

    <comments>
        <single>
            <expression>#</expression>
        </single>
        <multiline>
            <starts-with>
                <expression>/*</expression>
            </starts-with>
            <ends-with>
                <expression>*/</expression>
            </ends-with>
        </multiline>
    </comments>

    <brackets>
        <pair open="{" close="}" />
        <pair open="[" close="]" />
        <pair open="(" close=")" />
    </brackets>

    <surrounding-pairs>
        <pair open="{" close="}" />
        <pair open="[" close="]" />
        <pair open="(" close=")" />
        <pair open="&quot;" close="&quot;" />
    </surrounding-pairs>

    <scopes>
        <include syntax="self" collection="comments" />
        <include syntax="self" collection="keywords" />
        <include syntax="self" collection="values" />
        <scope name="sieve.bracket">
            <expression>[{}\[\]()]</expression>
        </scope>
        <scope name="sieve.operator">
            <expression>[;]</expression>
        </scope>
    </scopes>

    <collections>
        <!-- Comments -->
        <collection name="comments">
        <scope name="sieve.comment.single" spell-check="true">
            <expression>\#(.*)$</expression>
            <capture number="1" name="sieve.comment.content" />
        </scope>
        </collection>

        <!-- Keywords -->
        <collection name="keywords">
            <scope name="sieve.keyword.statement">
                <strings>
                    <string>else</string>
                    <string>elsif</string>
                    <string>if</string>
                    <string>require</string>
                </strings>
            </scope>
            <scope name="sieve.keyword.condition">
                <strings>
                    <string>allof</string>
                    <string>anyof</string>
                    <string>not</string>
                </strings>
            </scope>
            <scope name="sieve.identifier.function">
                <strings>
                    <string>discard</string>
                    <string>fileinto</string>
                    <string>keep</string>
                    <string>reject</string>
                    <string>stop</string>
                </strings>
            </scope>
            <scope name="sieve.value.boolean">
                <strings>
                    <string>false</string>
                    <string>true</string>
                </strings>
            </scope>
        </collection>

        <!-- Values -->
        <collection name="values">
            <scope name="sieve.string.double-quoted">
                <!-- Quoted strings can span multiple lines. -->
                <starts-with>
                    <expression>&quot;</expression>
                </starts-with>
                <ends-with>
                    <expression>&quot;</expression>
                </ends-with>
                <subscopes>
                    <scope name="sieve.string.escape">
                        <expression>\\.</expression>
                    </scope>
                </subscopes>
            </scope>
            <scope name="sieve.value.number">
                <expression>\d+[kmgKMG]?</expression>
            </scope>
            <scope name="sieve.tag.name">
                <expression>[a-zA-Z]\w*</expression>
            </scope>
            <scope name="sieve.tag.attribute.name">
                <expression>:\w+</expression>
            </scope>
        </collection>
    </collections>
</syntax>
